{
  "builds": [
    {
      "src": "api/metrics.js",
      "use": "@vercel/node"
    },
    {
      "src": "index.html",
      "use": "@vercel/static"
    }
  ],
  "routes": [
    {
      "src": "/metrics",
      "methods": ["GET", "POST"],
      "dest": "api/metrics.js"
    },
    {
      "src": "/metrics/clear",
      "methods": ["POST"],
      "dest": "api/metrics.js"
    },
    {
      "src": "/(.*)",
      "dest": "index.html"
    }
  ]
}
